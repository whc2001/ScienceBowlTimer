<Window x:Class="ScienceBowlTimer.PublicDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Science Bowl Timer - Public Display" 
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        Topmost="True"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.25*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        
        <!-- Top Info Bar -->
        <Grid Grid.Row="0" Background="#1a1a1a" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="40,20">
                <TextBlock Text="CURRENT HALF" FontSize="56" Foreground="#AAAAAA" FontWeight="Bold"/>
                <TextBlock x:Name="CurrentHalfText" Text="-" FontSize="128" Foreground="White" FontWeight="Bold" Margin="0,10,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="40,20">
                <TextBlock Text="REMAINING TIME" FontSize="56" Foreground="#AAAAAA" FontWeight="Bold" TextAlignment="Right"/>
                <TextBlock x:Name="RemainingTimeText" Text="-:--" FontSize="128" Foreground="White" FontWeight="Bold" Margin="0,10,0,0" TextAlignment="Right"/>
            </StackPanel>
        </Grid>
        
        <!-- Main Display Area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <!-- Question Type -->
            <Viewbox Grid.Row="0" Margin="50">
                <TextBlock x:Name="QuestionTypeText" Text="-" Foreground="#FFD700" FontWeight="Bold" TextAlignment="Center"/>
            </Viewbox>
            
            <!-- Countdown Timer -->
            <Viewbox Grid.Row="1" Margin="50">
                <TextBlock x:Name="CountdownText" Text="-" Foreground="White" FontWeight="Bold" TextAlignment="Center"/>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
