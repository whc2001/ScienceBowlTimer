<Window x:Class="ScienceBowlTimer.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceBowlTimer"
        mc:Ignorable="d"
        Title="Science Bowl Timer - Control Panel" 
        WindowState="Normal"
        WindowStyle="None"
        Background="#2d2d2d"
        Closing="Window_Closing">
    <Grid>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- Half Timer Controls -->
            <GroupBox Grid.Row="0" Header="HALF TIMER" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,20">
                <Grid>
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                        x:Name="StartFirstHalfButton"
                        Style="{StaticResource TouchAwareButton}"
                        FontSize="28" FontWeight="Bold" 
                        Background="#4CAF50" Foreground="White"
                        Margin="10"
                        Click="StartFirstHalf_Click">
                        <TextBlock Text="Start First Half" TextAlignment="Center" TextWrapping="Wrap"/>
                    </Button>

                    <Button Grid.Column="1"
                        x:Name="StartSecondHalfButton"
                        Style="{StaticResource TouchAwareButton}"
                        FontSize="28" FontWeight="Bold" 
                        Background="#2196F3" Foreground="White"
                        Margin="10"
                        Click="StartSecondHalf_Click">
                        <TextBlock Text="Start Second Half" TextAlignment="Center" TextWrapping="Wrap"/>
                    </Button>

                    <Button Grid.Column="2"
                        x:Name="StartBreakButton"
                        Style="{StaticResource TouchAwareButton}"
                        FontSize="28" FontWeight="Bold" 
                        Background="#00BCD4" Foreground="White"
                        Margin="10"
                        Click="StartBreak_Click">
                        <TextBlock Text="Start Break" TextAlignment="Center" TextWrapping="Wrap"/>
                    </Button>

                    <Button Grid.Column="3"
                        x:Name="PauseResumeButton"
                        Style="{StaticResource TouchAwareButton}"
                        FontSize="28" FontWeight="Bold" 
                        Background="#FF9800" Foreground="White"
                        Margin="10"
                        Click="PauseResume_Click">
                        <TextBlock Text="Pause / Resume" TextAlignment="Center" TextWrapping="Wrap"/>
                    </Button>

                    <Button Grid.Column="4"
                        x:Name="StopTimerButton"
                        Style="{StaticResource TouchAwareButton}"
                        FontSize="28" FontWeight="Bold" 
                        Background="#F44336" Foreground="White"
                        Margin="10"
                        Click="StopTimer_Click">
                        <TextBlock Text="Stop Half Timer" TextAlignment="Center" TextWrapping="Wrap"/>
                    </Button>
                    </Grid>

                    <!-- Manual Adjust Button -->
                    <Button x:Name="AdjustHalfTimerButton"
                        Style="{StaticResource TouchAwareButton}"
                        Content="Set"
                        FontSize="12"
                        Background="#FF0000"
                        Foreground="White"
                        Width="60"
                        Height="20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="1"
                        Click="AdjustHalfTimer_Click"
                        ToolTip="Adjust Half Timer (Only when paused)"/>
                </Grid>
            </GroupBox>

            <!-- Question Timer Controls -->
            <GroupBox Grid.Row="1" Header="QUESTION TIMER" Foreground="White" FontSize="24" FontWeight="Bold">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0"
                        x:Name="StartTossUpButton"
                        Style="{StaticResource TouchAwareButton}"
                        FontSize="32" FontWeight="Bold" 
                        Background="#FF9800" Foreground="White"
                        Margin="10"
                        Click="StartTossUp_Click">
                        <TextBlock Text="Start Toss-Up" TextAlignment="Center" TextWrapping="Wrap"/>
                    </Button>

                    <Button Grid.Row="0" Grid.Column="1"
                        x:Name="StartBonusButton"
                        Style="{StaticResource TouchAwareButton}"
                        FontSize="32" FontWeight="Bold" 
                        Background="#9C27B0" Foreground="White"
                        Margin="10"
                        Click="StartBonus_Click">
                        <TextBlock Text="Start Bonus" TextAlignment="Center" TextWrapping="Wrap"/>
                    </Button>

                    <Button Grid.Row="1" Grid.Column="0"
                        x:Name="RestartLastButton"
                        Style="{StaticResource TouchAwareButton}"
                        FontSize="32" FontWeight="Bold" 
                        Background="#607D8B" Foreground="White"
                        Margin="10"
                        Click="RestartLast_Click">
                        <TextBlock Text="Restart Last" TextAlignment="Center" TextWrapping="Wrap"/>
                    </Button>

                    <Button Grid.Row="1" Grid.Column="1"
                        x:Name="StopQuestionTimerButton"
                        Style="{StaticResource TouchAwareButton}"
                        FontSize="32" FontWeight="Bold" 
                        Background="#795548" Foreground="White"
                        Margin="10"
                        Click="StopQuestionTimer_Click">
                        <TextBlock Text="Stop Question Timer" TextAlignment="Center" TextWrapping="Wrap"/>
                    </Button>

                </Grid>
            </GroupBox>
        </Grid>

        <!-- Bottom corner buttons -->
        <Button x:Name="SwapDisplaysButton"
            Style="{StaticResource TouchAwareButton}"
            Content="Swap"
            FontSize="12"
            Background="#626262" Foreground="White"
            Width="60" Height="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="5,5,70,5"
            Click="SwapDisplays_Click"
            ToolTip="Swap Displays"/>

        <Button x:Name="ExitButton"
            Style="{StaticResource TouchAwareButton}"
            Content="Exit"
            FontSize="12"
            Background="#D32F2F" Foreground="White"
            Width="60" Height="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="5"
            Click="Exit_Click"
            ToolTip="Exit Application"/>
    </Grid>
</Window>
